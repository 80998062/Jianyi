<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sinyuk.jianyimaterial">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.Jianyi"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/Jianyi">
        <activity
            android:name=".activities.CategoryMenu"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.CategoryPage"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.ProfileActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.PostActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activities.ProductDetails"
            android:theme="@style/Jianyi.TranspStatus"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activities.RegisterSettings"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".activities.SettingsActivity" />
        <activity
            android:name=".activities.HomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/Jianyi.TranspStatus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PhotoViewActivity"
            android:launchMode="singleTop"
            android:theme="@style/Jianyi.FullScreenBlack" />
        <activity
            android:name=".activities.WebViewActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.ExploreActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.NeedsActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PersonalPage"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activities.AboutPage"
            android:launchMode="singleTop"
            android:theme="@style/Jianyi.Transparent" />
        <activity
            android:name=".activities.CustomErrorActivity"
            android:process=":error_activity">
            <intent-filter>
                <action android:name="cat.ereza.customactivityoncrash.ERROR" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".utils.SuggestionProvider"
            android:authorities="com.sinyuk.jianyimaterial.utils.SuggestionProvider" />

        <activity android:name=".activities.WidgetDemo" />


        <activity
            android:name=".activities.SignUpActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateHidden" />


        <activity
            android:name=".activities.SignInActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!--MVP-->
        <activity android:name=".feature.login.LoginView"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!--MVP-->
    </application>

</manifest>