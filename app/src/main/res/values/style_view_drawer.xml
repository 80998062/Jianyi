<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawerMenuText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableTint">@color/icon_selected</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/material_text_menu</item>
        <item name="android:textColor">@color/text_selected</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="DrawerMenuDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey_100</item>
    </style>
</resources>