<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ================ -->
    <!-- Theme -->
    <!-- 主题-->
    <!-- ================ -->
    <eat-comment />

    <!-- Base application theme. -->
    <style name="Jianyi" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:windowBackground">@color/window_background</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="textAppearanceSearchResultTitle">@style/SearchResultTitle</item>
    </style>




    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>


    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--控件颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--标题颜色-->
        <item name="android:textColor">@color/colorAccent</item>
        <!--message颜色-->
        <item name="android:textColorPrimary">@color/grey_600</item>
    </style>


    <style name="Jianyi.Transparent" parent="Jianyi">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Jianyi.FullScreenBlack" parent="Jianyi">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Jianyi.Splash" parent="Jianyi">
        <item name="android:windowBackground">@drawable/splash_view</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Jianyi.Dialog" parent="Jianyi">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

</resources>