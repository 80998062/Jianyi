<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/DefaultCardView.Rect"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:id="@+id/settings_items"
        style="@style/DividedView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/set_password"
            style="@style/SettingsItemText"
            android:drawableLeft="@drawable/ic_key_variant_accent_24dp"
            android:text="@string/settings_update_password"/>

        <TextView
            android:id="@+id/set_school"
            style="@style/SettingsItemText"
            android:drawableLeft="@drawable/ic_location_on_accent_18dp"
            android:text="@string/settings_update_school"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
