<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hint_continue_with"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/material_text_caption1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_content_space"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/access_wechat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_wechat_100px"
            android:tint="#03ac4d"  />

        <ImageView
            android:id="@+id/access_qq"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_qq_100px"
            android:tint="#0294b1" />

        <ImageView
            android:clickable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:id="@+id/access_weibo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_weibo_100px"
            android:tint="#ce4f05" />
    </LinearLayout>

</LinearLayout>