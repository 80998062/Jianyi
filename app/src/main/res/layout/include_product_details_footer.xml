<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end|center"
    android:background="@color/transparent"
    android:orientation="vertical"
    app:layout_behavior=".ui.QuickHideBehavior">

    <View
        style="@style/Shadow.Above"
        android:layout_height="2dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/general_content_space"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="@dimen/general_content_space">


        <Button
            android:id="@+id/comment_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/general_content_space"
            android:layout_marginRight="@dimen/general_content_space"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_outline_accent"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="@dimen/general_content_space"
            android:text="@string/action_comment"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/material_text_menu" />


        <Button
            android:id="@+id/contact_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_content_space"
            android:layout_marginStart="@dimen/general_content_space"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_fill_accent"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="8dp"
            android:text="@string/action_direct_message"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_menu" />

    </LinearLayout>
</LinearLayout>