<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_coordinator_layout"
    style="@style/DefaultCoordinatorLayout">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/DefaultAppBarLayout"
        app:elevation="0dp">


        <ImageView
            android:id="@+id/backdrop_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:foreground="@color/backdrop_scrim"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary"
            app:layout_scrollFlags="scroll" />


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:overScrollMode="never"
        app:behavior_overlapTop="176dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/UserInfoForm">

                <LinearLayout style="@style/UserInfoItem">">

                    <TextView
                        style="@style/UserInfoItemHint"
                        android:text="头像" />

                    <com.sinyuk.jianyimaterial.widgets.MyCircleImageView
                        android:id="@+id/avatar"
                        style="@style/Avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_avatar_placeholder" />
                </LinearLayout>

                <LinearLayout style="@style/UserInfoItem">

                    <TextView
                        style="@style/UserInfoItemHint"
                        android:text="昵称" />

                    <EditText
                        android:id="@+id/user_name_et"
                        style="@style/UserInfoItemInput" />
                </LinearLayout>

                <LinearLayout style="@style/UserInfoItem">

                    <TextView
                        style="@style/UserInfoItemHint"
                        android:text="姓名" />

                    <EditText
                        android:id="@+id/real_name_et"
                        style="@style/UserInfoItemInput" />
                </LinearLayout>

                <LinearLayout style="@style/UserInfoItem">

                    <TextView
                        style="@style/UserInfoItemHint"
                        android:text="学校" />

                    <EditText
                        android:id="@+id/location_et"
                        style="@style/UserInfoItemInput" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                style="@style/UserInfoForm"
                android:layout_marginTop="@dimen/general_content_space">
                <LinearLayout style="@style/UserInfoItem">
                    <TextView
                        style="@style/UserInfoItemHint"
                        android:text="手机" />
                    <EditText
                        android:id="@+id/tel_et"
                        style="@style/UserInfoItemInput" />
                </LinearLayout>

                <LinearLayout style="@style/UserInfoItem">

                    <TextView
                        style="@style/UserInfoItemHint"
                        android:text="密码" />

                    <EditText
                        android:id="@+id/password_et"
                        style="@style/UserInfoItemInput"
                        android:hint="······"
                        android:inputType="textPassword" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/UserInfoForm"
                android:layout_marginTop="@dimen/general_content_space">

                <LinearLayout

                    style="@style/UserInfoItem">

                    <TextView
                        style="@style/UserInfoItemHint"
                        android:text="微信" />

                    <EditText
                        android:id="@+id/with_wechat_et"
                        style="@style/UserInfoItemInput"
                        android:hint="未关联" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/fab"
                style="@style/CustomBackgroundButton.Fill"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="确认修改" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>



