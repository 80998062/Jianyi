<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    style="@style/DefaultCoordinatorLayout">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_height="@dimen/profile_backdrop_height"
        style="@style/DefaultAppBarLayout">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            style="@style/DefaultCollapsingToolbarLayout"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backdrop_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_backdrop_height"
                android:src="@color/colorPrimary"
                android:foreground="@color/backdrop_scrim"
                android:scaleType="centerCrop" />

            <include
                android:id="@+id/profile_header"
                layout="@layout/include_profile_header" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/BaseToolbar"
                app:title="@string/activity_profile"
                android:background="@color/transparent"
                app:navigationIcon="@drawable/ic_arrow_back_primary_24dp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                style="@style/DefaultTabLayout.Fixed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:layout_gravity="bottom"
                android:background="@color/transparent"
                app:tabIndicatorColor="@color/white"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/grey_100"
                tools:background="@color/colorAccent" />

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/FAB.Large"
        android:src="@drawable/ic_chat_white_48dp"
        android:layout_gravity="bottom|end"
        app:layout_behavior="com.sinyuk.jianyimaterial.ui.ScrollAwareFABBehavior" />
</android.support.design.widget.CoordinatorLayout>