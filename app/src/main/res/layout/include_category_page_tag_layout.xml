<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:focusable="false"
    android:clickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/drag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            style="@style/TagLayoutTitle"
            android:drawableLeft="@drawable/ic_school_white_24dp"
            android:drawableStart="@drawable/ic_school_white_24dp"
            android:text="@string/tag_school" />

        <com.sinyuk.jianyimaterial.widgets.flowlayout.TagFlowLayout
            android:id="@+id/school_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            app:max_select="1">

        </com.sinyuk.jianyimaterial.widgets.flowlayout.TagFlowLayout>


        <TextView
            style="@style/TagLayoutTitle"
            android:drawableLeft="@drawable/ic_sort_white_24dp"
            android:drawableStart="@drawable/ic_sort_white_24dp"
            android:text="@string/tag_order" />

        <com.sinyuk.jianyimaterial.widgets.flowlayout.TagFlowLayout
            android:id="@+id/order_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            app:max_select="1">

        </com.sinyuk.jianyimaterial.widgets.flowlayout.TagFlowLayout>

        <TextView
            style="@style/TagLayoutTitle"
            android:drawableLeft="@drawable/ic_dashboard_white_24dp"
            android:drawableStart="@drawable/ic_dashboard_white_24dp"
            android:text="@string/tag_child_sort" />

        <com.sinyuk.jianyimaterial.widgets.flowlayout.TagFlowLayout
            android:id="@+id/sort_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            app:max_select="1">

        </com.sinyuk.jianyimaterial.widgets.flowlayout.TagFlowLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_iv"
            style="@style/ClickableImageViewBorderless"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_arrow_back_primary_24dp" />

        <TextView
            style="@style/SingleLineText"
            android:id="@+id/toolbar_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/activity_category_page"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_title"
            />

        <ImageView
            android:layout_marginRight="@dimen/general_content_space"
            android:id="@+id/sort_iv"
            style="@style/ClickableImageViewBorderless"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_filter_variant_white_24dp" />
    </LinearLayout>

</LinearLayout>