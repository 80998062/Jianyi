<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/coordinator_layout"
    style="@style/DefaultCoordinatorLayout">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            style="@style/DefaultCollapsingToolbarLayout">

            <ImageView
                android:id="@+id/backdrop_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_backdrop_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/backdrop_2" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="@color/transparent"
                app:layout_collapseMode="pin"
                app:title="">
                <!--app:layout_scrollFlags="scroll|enterAlways"-->
            </android.support.v7.widget.Toolbar>

            <com.sinyuk.jianyimaterial.widgets.ArrowUpPagerIndicator
                android:id="@+id/page_indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:layout_gravity="bottom"
                android:background="@color/transparent"
                android:orientation="horizontal"
                app:layout_anchor="@id/toolbar"
                app:layout_anchorGravity="bottom|end"
                app:visible_tab_count="2">

                <TextView
                    style="@style/ArrowUpIndicatorText"
                    android:text="@string/action_sign_in" />

                <TextView
                    style="@style/ArrowUpIndicatorText"
                    android:text="@string/action_sign_up" />
            </com.sinyuk.jianyimaterial.widgets.ArrowUpPagerIndicator>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</android.support.design.widget.CoordinatorLayout>