<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/coordinator_layout"
    style="@style/DefaultCoordinatorLayout">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/DefaultAppBarLayout"
        android:layout_height="256dp"
        app:expanded="true">

        <android.support.design.widget.CollapsingToolbarLayout
            app:titleEnabled="true"
            app:title="@string/action_settings"
            app:collapsedTitleTextAppearance="@style/collapsedTitleText"
            app:expandedTitleMarginBottom="@dimen/activity_horizontal_margin"
            app:expandedTitleTextAppearance="@style/expandedTitleText"
            style="@style/DefaultCollapsingToolbarLayout">

            <ImageView
                android:id="@+id/backdrop_iv"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/backdrop_4" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/BaseToolbar"
                android:background="@color/transparent"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:overScrollMode="never"
        app:behavior_overlapTop="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            style="@style/DefaultCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/cardview_distinct_corner_radius">

            <LinearLayout
                style="@style/DividedView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <include
                    android:id="@+id/about_fl"
                    layout="@layout/include_activity_settings_about" />

                <include

                    android:id="@+id/push_fl"
                    layout="@layout/include_activity_settings_push" />


                <include
                    android:id="@+id/cache_fl"
                    layout="@layout/include_activity_settings_cache" />


                <include
                    android:id="@+id/logout_fl"
                    layout="@layout/include_activity_settings_logout" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
