<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="160dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/backdrop_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@color/backdrop_scrim"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">


        <com.sinyuk.jianyimaterial.widgets.MyCircleImageView
            android:id="@+id/avatar"
            style="@style/Avatar"
            android:layout_width="@dimen/image_size_5"
            android:layout_height="@dimen/image_size_5"
            android:layout_marginBottom="@dimen/general_content_space"
            android:layout_marginTop="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/SingleLineText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_menu"
            android:textStyle="bold"
            tools:text="@string/user_name" />


        <TextView
            android:id="@+id/location_tv"
            style="@style/SingleLineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tiny_content_space"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_caption1"
            tools:text="@string/dummy_user_location" />


    </LinearLayout>

    <com.sinyuk.jianyimaterial.widgets.LabelView
        android:id="@+id/label_triangle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="end|bottom"
        app:lv_background_color="@color/colorAccent"
        app:lv_fill_triangle="true"
        app:lv_gravity="BOTTOM_RIGHT"
        app:lv_text="BETA"
        app:lv_text_size="@dimen/material_text_menu" />
</FrameLayout>
